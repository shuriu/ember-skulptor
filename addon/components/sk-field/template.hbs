{{yield (hash
  object=this.object
  attribute=this.attribute
  value=(get this.object this.attribute)
  id=this.id
  name=this.name
  labelValue=this.labelValue
  errorMessage=errorMessage
  isInvalid=this.isInvalid

  label=(component 'sk-field/label'
    for=this.id
    text=this.labelValue
  )

  input=(component 'sk-field/input'
    object=this.object
    attribute=this.attribute
    disabled=this.disabled
    id=this.id
    name=this.name
    value=(get this.object this.attribute)
    placeholder=this.placeholderValue
    autocomplete=this.autocompleteValue
  )

  textarea=(component 'sk-field/textarea'
    object=this.object
    attribute=this.attribute
    id=this.id
    name=this.name
    value=(get this.object this.attribute)
    placeholder=this.placeholderValue
    autocomplete=this.autocompleteValue
  )

  checkbox=(component 'sk-field/checkbox'
    object=this.object
    attribute=this.attribute
    id=this.id
    name=this.name
    checked=(get this.object this.attribute)
  )
)}}
